<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:id="@+id/layout1"          >

    <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:id="@+id/space" android:layout_gravity="center_horizontal"/>
    <EditText
            android:text=""
            android:inputType="numberDecimal"
            android:id="@+id/edit_I"
            android:layout_width="65dp"
            android:layout_height="40dp"
           />

    <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:id="@+id/space1"
            android:layout_gravity="center_horizontal|top"/>
    <EditText
            android:text=""
            android:inputType="numberDecimal"
            android:id="@+id/edit_V"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_gravity="left"/>


    <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:id="@+id/space2" android:layout_gravity="center_horizontal"/>
    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/add_wire_button"
        style="?android:attr/buttonStyleSmall"
        android:text="Upd"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"/>

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/Remove_button"
            style="?android:attr/buttonStyleSmall"
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="Fragment1_Click"
            android:layout_weight="1"/>

</LinearLayout>